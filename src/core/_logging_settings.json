{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "default": {
      "format": "[%(asctime)s][%(process)d][%(name)-24s]%(levelname)9s:  %(message)s",
      "datefmt": "%d.%m.%Y %H:%M:%S%z"
    },
    "default_colored": {
      "()": "colorlog.ColoredFormatter",
      "log_colors": {
        "DEBUG": "thin_white",
        "INFO": "white",
        "SUCCESS": "green",
        "WARNING": "yellow",
        "ERROR": "red",
        "CRITICAL": "red,bg_white"
      },
      "format": "%(log_color)s[%(asctime)s][%(name)-50s]%(levelname)9s:  %(message)s",
      "datefmt": "%d.%m.%Y %H:%M:%S%z"
    }
  },
  "handlers": {
    "console_stdout": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "default_colored",
      "stream": "ext://sys.stdout"
    },
    "info_file_handler": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "DEBUG",
      "formatter": "default",
      "filename": "",
      "interval": 1,
      "when": "d",
      "backupCount": 14,
      "encoding": "utf8"
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "console_stdout",
      "info_file_handler"
    ]
  }
}